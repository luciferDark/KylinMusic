<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 阴影部分 -->
    <item
        android:left="@dimen/dp_4"
        android:top="@dimen/dp_4">
        <shape android:shape="rectangle" >

            <gradient
                android:angle="270"
                android:endColor="#0F000000"
                android:startColor="#0F000000" />

            <corners
                android:bottomLeftRadius="@dimen/dp_4"
                android:bottomRightRadius="@dimen/dp_14"
                android:topLeftRadius="@dimen/dp_4"
                android:topRightRadius="@dimen/dp_4" />
        </shape>
    </item>

    <!-- 背景部分 -->
    <item
        android:bottom="3dp"
        android:left="@dimen/dp_0.5"
        android:top="@dimen/dp_0.5"
        android:right="3dp">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:endColor="#FFFFFF"
                android:startColor="#FFFFFF" />

            <corners
                android:bottomLeftRadius="@dimen/dp_4"
                android:bottomRightRadius="@dimen/dp_14"
                android:topLeftRadius="@dimen/dp_4"
                android:topRightRadius="@dimen/dp_4" />
        </shape>
    </item>

</layer-list>
