<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ui_main_bottom_music_play_vp_adapter_music_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dip"
        app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/ui_main_bottom_music_play_vp_adapter_music_icon"
        android:layout_alignTop="@+id/ui_main_bottom_music_play_vp_adapter_music_icon"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@+id/ui_main_bottom_music_play_vp_adapter_music_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ui_main_bottom_music_play_vp_adapter_music_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="东风破" />

        <TextView
            android:id="@+id/ui_main_bottom_music_play_vp_adapter_music_songer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16sp"
            android:text="周杰伦" />
    </LinearLayout>

</RelativeLayout>
