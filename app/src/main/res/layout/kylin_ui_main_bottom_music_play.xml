<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ui_main_bottom_music_play_layout"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="60dip"
    android:background="#33c6c6c6">

    <android.support.v4.view.ViewPager
        android:id="@+id/ui_main_bottom_music_play_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/ui_main_bottom_music_play_control" />

    <ImageButton
        android:id="@+id/ui_main_bottom_music_play_control"
        android:layout_width="60dip"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ui_main_bottom_music_play_list"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@android:drawable/ic_media_play" />

    <ImageButton
        android:id="@+id/ui_main_bottom_music_play_list"
        android:layout_width="60dip"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@android:drawable/ic_menu_more" />
</RelativeLayout>
